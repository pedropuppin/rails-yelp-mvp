<div class="container">
  <div class="row justify-content-start">
    <% @restaurants.each do | restaurant | %>
      <div class="col-3 mt-5">
        <div class="card" style="width: 18rem;">
          <img src="https://source.unsplash.com/random/1600x900/?restaurant" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <p class="card-text"><%= "Address: #{restaurant.address} || Phone: #{restaurant.phone_number} || Category: #{restaurant.category}" %></p>
            <%= link_to "Aditional infos.", restaurant_path(restaurant), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



